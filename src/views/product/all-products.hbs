<div class="row">  
    {{#each product}}
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{name}} <a href="/product/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <img src="{{image}}" alt="" class="img-thumbnail">
                <ul>
                    <li>{{amount}}</li>
                    <li>{{price}}</li>
                    <li>{{description}}</li>
                    <form action="/product/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger d-block m-auto" type="submit">Delete</button>
                    </form>
                </ul>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card col-md-4 mx-auto text-center">
        <div class="card-body">
            <p>No products Yet</p>
            <a href="/product/new" class="btn btn-primary">Create One Right Now</a>
        </div>
    </div>
    {{/each}}
</div>